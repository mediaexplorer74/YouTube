<Page
    x:Class="YouTube.Searching"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:YouTube"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="Black">

    <Grid Background="Black">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Search Panel -->
        <Grid Grid.Row="0" Background="Black" Height="56">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBox x:Name="SearchInput"
                     Grid.Column="1"
                     PlaceholderText="Поиск"
                     Background="#FF1A1A1A"
                     BorderThickness="0"
                     Foreground="White"
                     Padding="10,5"
                     Margin="8,8,8,8"
                     KeyUp="SearchInput_KeyUp"
                     TextChanged="SearchInput_TextChanged"/>
            <Button x:Name="SearchButton"
                    Grid.Column="2"
                    Background="Transparent"
                    Foreground="White"
                    BorderThickness="0"
                    Click="SearchButton_Click"
                    Margin="0,0,16,0">
                <Image Source="Assets/search.png" Width="24" Height="24"/>
            </Button>
        </Grid>

        <!-- Search History and Suggestions Container -->
        <StackPanel Grid.Row="1">
            <!-- Search History -->
            <ListView x:Name="SearchHistoryListView"
                      Background="#000000"
                      Margin="8,0,8,0"
                      MaxHeight="300"
                      Visibility="Collapsed"
                      SelectionMode="None"
                      HorizontalAlignment="Stretch">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="12,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <FontIcon Glyph="&#xE81C;"
                                     FontFamily="Segoe MDL2 Assets"
                                     FontSize="16"
                                     Foreground="#AAAAAA"
                                     VerticalAlignment="Center"/>

                            <Button Grid.Column="1"
                                   Content="{Binding SearchText}"
                                   Foreground="White"
                                   FontSize="14"
                                   Margin="12,0,12,0"
                                   VerticalAlignment="Center"
                                   Background="Transparent"
                                   BorderThickness="0"
                                   HorizontalAlignment="Left"
                                   HorizontalContentAlignment="Left"
                                   Click="HistoryItem_Click"/>

                            <Button Grid.Column="2"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Click="RemoveHistoryItem_Click"
                                    Padding="8">
                                <FontIcon Glyph="&#xE711;"
                                         FontFamily="Segoe MDL2 Assets"
                                         FontSize="16"
                                         Foreground="#AAAAAA"/>
                            </Button>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <!-- Search Suggestions -->
            <ListView x:Name="SuggestionsListView"
                      Background="#000000"
                      Margin="8,0,8,0"
                      MaxHeight="300"
                      Visibility="Collapsed"
                      SelectionMode="None"
                      HorizontalAlignment="Stretch">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Button Background="Transparent"
                                BorderThickness="0"
                                HorizontalAlignment="Stretch"
                                HorizontalContentAlignment="Left"
                                Padding="12,8"
                                Click="SuggestionItem_Click">
                            <TextBlock Text="{Binding}"
                                     Foreground="White"
                                     FontSize="14"/>
                        </Button>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackPanel>

        <!-- Search Results -->
        <Grid Grid.Row="2">
            <!-- Search Results -->
            <ScrollViewer x:Name="SearchResultsScrollViewer">
                <ItemsControl x:Name="SearchResultsContainer">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <ItemsWrapGrid Orientation="Horizontal"
                                         MaximumRowsOrColumns="3"
                                         HorizontalAlignment="Center"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemContainerStyle>
                        <Style TargetType="ContentPresenter">
                            <Setter Property="Margin" Value="8"/>
                        </Style>
                    </ItemsControl.ItemContainerStyle>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Button HorizontalAlignment="Stretch"
                                    Padding="0"
                                    Click="VideoCard_Click"
                                    Background="Transparent">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <!-- Thumbnail Container with rounded corners -->
                                    <Border CornerRadius="8" Grid.Row="0"
                                            Background="#1A1A1A" Height="169">
                                        <Image Source="{Binding Thumbnail}"
                                               Stretch="UniformToFill"
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Center"/>
                                    </Border>

                                    <!-- Video info -->
                                    <Grid Grid.Row="1" Margin="0,12,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Channel Avatar -->
                                        <Border Width="36"
                                                Height="36"
                                                CornerRadius="18"
                                                Margin="0,0,12,0"
                                                Background="#333333"
                                                VerticalAlignment="Top">
                                            <Image Source="{Binding ChannelThumbnail}"
                                                   Stretch="UniformToFill"/>
                                        </Border>

                                        <!-- Title and Channel Info -->
                                        <StackPanel Grid.Column="1" Margin="0,0,12,0">
                                            <TextBlock Text="{Binding Title}"
                                                      TextWrapping="Wrap"
                                                      FontSize="14"
                                                      LineHeight="20"
                                                      Foreground="White"
                                                      MaxLines="2"
                                                      TextTrimming="CharacterEllipsis"/>

                                            <TextBlock Text="{Binding Author}"
                                                      FontSize="12"
                                                      Foreground="#AAAAAA"
                                                      Margin="0,4,0,0"
                                                      TextTrimming="CharacterEllipsis"/>
                                        </StackPanel>
                                    </Grid>
                                </Grid>
                            </Button>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>

        
    </Grid>
</Page>